{
  "name": "reflux-core",
  "version": "0.2.0-rc",
  "description": "A simple library for uni-directional dataflow application architecture inspired by ReactJS Flux",
  "main": "src/index.js",
  "scripts": {
    "test:mocha": "mocha",
    "test:karma": "karma start test/config/karma.conf.js",
    "test:travis": "karma start test/config/karma-travis.conf.js",
    "test": "npm run lint && npm run test:mocha && npm run test:karma",
    "lint": "jshint src/ test/",
    "benchmark": "node test/benchmarks",
    "watch:src": "watch 'npm run test' src/ test/",
    "watch": "parallelshell 'npm run watch:src'"
  },
  "author": "Mikael Brassman",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/reflux/refluxjs-core.git"
  },
  "bugs": {
    "url": "http://github.com/reflux/refluxjs-core/issues"
  },
  "keywords": [
    "reflux",
    "flux",
    "architecture",
    "dataflow",
    "action",
    "event",
    "data"
  ],
  "dependencies": {
    "eventemitter3": "^1.1.1"
  },
  "devDependencies": {
    "benchmark": "^1.0.0",
    "browserify": "~10.2.3",
    "chai": "latest",
    "chai-as-promised": "latest",
    "es6-promise": "^2.3.0",
    "jshint": "latest",
    "karma": "latest",
    "karma-browserify": "latest",
    "karma-commonjs": "latest",
    "karma-mocha": "latest",
    "karma-phantomjs-launcher": "latest",
    "karma-sauce-launcher": "latest",
    "karma-spec-reporter": "latest",
    "mocha": "latest",
    "parallelshell": "latest",
    "q": "^1.0.1",
    "sinon": "^1.10.3",
    "watch": "latest"
  }
}
